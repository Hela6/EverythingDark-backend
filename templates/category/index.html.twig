{% extends 'base.html.twig' %}

{% block title %}The Blog - Categories
{% endblock %}

{% block body %}
	<h1>Categories</h1>

	<table class="table">
		<thead>
			<tr>
				<th>Name</th>
				<th>actions</th>
			</tr>
		</thead>
		<tbody>
			{% for category in categories %}
				<tr>
					<td>{{ category.name }}</td>
					<td>
						<a href="{{ path('app_category_show', {'id': category.id}) }}">explore this category</a>
					</td>
				</tr>
			{% else %}
				<tr>
					<td colspan="3">no records found</td>
				</tr>
			{% endfor %}
		</tbody>
	</table>
{% endblock %}
