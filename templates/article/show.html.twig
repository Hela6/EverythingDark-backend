{% extends 'base.html.twig' %}

{% block title %}Everything Dark - Article

{% endblock %}

{% block body %}


	<div class="article">
		<img src="{{ article.image }}" class="m-4" width="250px" height="auto" alt="Image">


		<div>
			<h2 class="mt-3" style="color:white">{{ article.title }}</h2>

			<p style="color:white;">{{ article.content|raw }}</p>
		</div>

	</div>


	<div class="d-flex flex-column align-items-left">

		<h5 class="mb-3 text-decoration-underline">Comments :</h5>

		{% for comment in comments %}
			<p>
				<strong>{{ comment.user.username }}:</strong>
				<em>{{ comment.content }}</em>
				<br>
			</p>
		{% endfor %}

	</div>


	<div class="d-flex flex-row justify-content-end">
		{% if is_granted('ROLE_USER') %}
			<div>
				<a href="{{ path('app_comment_new', {'id': article.id}) }}">
					<button class="css-button-3d--grey m-3" type="submit">add a comment</button>
				</a>
			</div>
		{% endif %}
		<div>
			<a href="{{ path('app_article_index') }}">
				<button class="css-button-3d--grey m-3" type="submit">back to articles list</button>
			</a>
		</div>
	</div>


{% endblock %}
